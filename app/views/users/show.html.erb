<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <br/>
        <h2 class="media-heading">User Profile</h2>
        <br/>
        <% if @user %>
          <h2 class="media-heading">name: <%= @user.name %></h2>
          <h2 class="media-heading">email: <%= @user.email %></h2>
          <h2 class="media-heading">role: <%= @user.role %></h2>
          <% if @wikis %>
            <% if @wikis.first %>
              <br/>
              <h2>My Wikis</h2>
              <table class="table table-bordered table-condensed">
                <thead>
                  <tr>
                    <th><h3>Wiki</h3></th>
                    <th><h3>Public/Private</h3></th>
                  </tr>
                </thead>
                <tbody>
                  <% @wikis.each do |wiki| %>
                    <%= render partial: 'wikis/wiki', locals: {user: @user, wiki: wiki} %>
                  <% end %>
                </tbody>
              </table>
            <% else %>
              <br/>
              <h2>No wikis</h2>
            <% end %>
          <% else %>
            <br/>
            <h2>No wikis</h2>
          <% end %>
        <% else %>
          <br/>
          <h2>No user signed in</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>