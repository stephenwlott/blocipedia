<br/>
<div class = "container">
  <div class="jumbotron">
    <h1>Blocipedia</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <% if @wikis.first %>
      <br/>
      <h2>List of Available Blocipedia Wikis</h2>
      <table class="table table-bordered table-condensed">
        <thead>
          <tr>
            <th><h3>Wiki</h3></th>
            <th><h3>Originator</h3></th>
            <th><h3>Public/Private</h3></th>
          </tr>
        </thead>
        <tbody>
          <% @wikis.each do |wiki| %>
            <% if wiki.is_public? || 
               (current_user && 
                 ((current_user.is_admin?) || 
                   ((current_user.is_premium?) && (wiki.user_id == current_user.id)))) %>
              <%= render partial: 'wikis/wikis', locals: {wiki: wiki} %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <br/>
      <h2>No wikis</h2>
    <% end %>
  </div>
</div>
